{
    "name": "bushbuddy-api",
    "version": "1.0.0",
    "type": "module",
    "scripts": {
        "start": "node src/server.js",
        "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --verbose --runInBand --coverage --detectOpenHandles",
        "dev": "concurrently \"npm run dev:gateway\" \"npm run dev:auth\"",
        "dev:gateway": "node src/server.js",
        "dev:auth": "node src/routes/authRoute.js"
    },
    "dependencies": {
        "bcrypt": "^6.0.0",
        "express": "^4.18.2",
        "express-http-proxy": "^2.1.1",
        "nanoid": "^5.1.5",
        "pg": "^8.16.2"
    },
    "devDependencies": {
        "@babel/core": "^7.27.7",
        "@babel/preset-env": "^7.27.2",
        "@jest/globals": "^30.0.3",
        "babel-jest": "^29.7.0",
        "concurrently": "^9.2.0",
        "cookie-parser": "^1.4.7",
        "cross-env": "^7.0.3",
        "jest": "^29.7.0",
        "jsonwebtoken": "^9.0.2",
        "supertest": "^7.1.1"
    },
    "jest": {
        "testEnvironment": "node",
        "transform": {},
        "moduleFileExtensions": [
            "js",
            "json"
        ],
        "moduleDirectories": [
            "node_modules",
            "src"
        ],
        "moduleNameMapper": {
            "^(\\.{1,2}/.*)\\.js$": "$1"
        },
        "setupFilesAfterEnv": [],
        "injectGlobals": true
    }
}
